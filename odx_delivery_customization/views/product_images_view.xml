<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- This view should only be used from the product o2m because the required field product_tmpl_id has to be automatically set. -->
    <record id="view_product_images_form" model="ir.ui.view">
        <field name="name">product.images.view.form</field>
        <field name="model">product.images</field>
        <field name="arch" type="xml">
            <form string="Product Images">

                <div class="row o_website_sale_image_modal">
                    <div class="col-md-6 col-xl-5">
                        <label for="name" string="Image Name"/>
                        <h2><field name="name" placeholder="Image Name"/></h2>
<!--                         <label for="product_id" string="Product"/>-->
                           <field name="product_id" invisible="1"/>
                         <label for="description" string="Description"/>
                            <field name="description"/>
                    </div>
                    <div class="col-md-6 col-xl-7 text-center o_website_sale_image_modal_container">
                        <div class="row">
                            <div class="col">
                                <field name="image_000" widget="image"/>
                            </div>




                        </div>
                    </div>
                </div>
            </form>
        </field>
    </record>
