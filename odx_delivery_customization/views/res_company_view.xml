<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_company_inherited_form">
            <field name="name">res.company.form.inherited</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="model">res.company</field>
            <field name="arch" type="xml">
                <xpath expr="//page[1]" position="after">
                    <page string="Banner Images">


                        <field name="banner_images_ids" class="o_website_sale_image_list"
                               context="{'default_name': name,}" mode="kanban" options="{'create_text':'Add a Media'}"
                               nolabel="1"/>


                    </page>
                </xpath>
                <xpath expr="//page[2]" position="after">
                    <page string="Terms and Conditions">


                        <field name="terms_and_conditions"/>


                    </page>
                </xpath>
                <xpath expr="//page[2]" position="after">
                    <page string="UPI Payments">
                        <div class="oe_row">
                            <div>
                                <group>
                                    <field name="upi_id" required="1"/>
                                </group>
                                <group col="4">
                                    <field name="person_name"/>
                                    <field name="mechant_id"/>

                                </group>
                            </div>

                        </div>

                    </page>
                </xpath>
                <xpath expr="//page[3]" position="after">
                    <page string="Accounts" invisible="0">
                        <div class="oe_row">
                            <div>
                                <group>
                                    <group>
                                        <field name="account_id"/>
                                        <field name="journal_id"/>
                                    </group>
                                </group>


                            </div>


                        </div>

                    </page>
                </xpath>
                   <xpath expr="//page[1]" position="after">
                    <page string="Send Notifications">
                        <group>
                            <group>
                                <field name="msg_users_id" widget="many2many_tags" placeholder="Select Users..."/>
                            </group>
<!--                            <group>-->
<!--                                 <button name="new_orders_notify" type="object" string="Send" class="btn btn-secondary"/>-->
<!--                            </group>-->
                        </group>






                    </page>
                </xpath>

            </field>
        </record>
    </data>
</odoo>