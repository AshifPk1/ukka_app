<odoo>
    <data>
        <record id="action_quotations_in_app" model="ir.actions.act_window">
            <field name="name">Customer Quotations</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="sale.sale_order_view_search_inherit_sale"/>
            <field name="domain">[('state','=','draft'),('order_method','=','app'),('cancelled_order','=',False)]
            </field>
            <field name="context">{'search_default_order_placed': 1}</field>
        </record>
        <record id="action_cancelled_orders_in_app" model="ir.actions.act_window">
            <field name="name">Cancelled Orders</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('order_placed',
                '=',True),('state','=','draft'),('order_method','=','app'),('cancelled_order','=',True)]
            </field>

        </record>
        <record id="action_orders_in_app" model="ir.actions.act_window">
            <field name="name">Customer Orders</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="sale.sale_order_view_search_inherit_sale"/>
            <field name="domain">[('order_placed',
                '=',True),('state','=','sale'),('order_method','=','app'),('cancelled_order','=',False)]
            </field>
            <field name="context">{'search_default_order_placed': 1}</field>
        </record>
