<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="purchase_order_form_inherit" model="ir.ui.view">
            <field name="name">odox.purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                      <button name="action_paid_status" string="Settle" attrs="{'invisible': [('state','!=','purchase')]}"
                                type="object" class="oe_highlight"/>
                </xpath>
                <xpath expr="//header/field[@name='state']" position="replace">
                <field name="state" widget="statusbar" statusbar_visible="draft,sent,reviewed,approved,purchase" readonly="1"/>
            </xpath>
                <xpath expr="//field[@name='partner_ref']" position="after">
                      <field name="sale_ref"/>
                </xpath>
            <xpath expr="//notebook" position="inside">
                    <page string="Payments">
                        <field name="purchase_payments_ids">
                            <tree editable="bottom">
                                <field name="date"/>
                                <field name="name"/>
                                <field name="amount" sum=" Amount"/>

                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>


         <record id="purchase.purchase_rfq" model="ir.actions.act_window">
            <field name="name">Vendor Quotations</field>
        </record>

        <record id="purchase.menu_purchase_rfq" model="ir.ui.menu">
            <field name="name">Vendor Quotations</field>
        </record>
       <record id="purchase.purchase_form_action" model="ir.actions.act_window">
            <field name="name">Vendor Orders</field>
        </record>

        <record id="purchase.menu_purchase_form_action" model="ir.ui.menu">
            <field name="name">Vendor Orders</field>
        </record>
         <record id="purchase.menu_procurement_partner_contact_form" model="ir.ui.menu">
            <field name="groups_id" eval="[(4,ref('base.group_no_one'))]"/>
        </record>
         <record id="stock.menu_product_variant_config_stock" model="ir.ui.menu">
            <field name="groups_id" eval="[(4,ref('base.group_no_one'))]"/>
        </record>


    </data>
</odoo>