<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="0">
    <record model="ir.rule" id="delivery_picking_comp_rule">
        <field name="name">Delivery Picking multi-company</field>
        <field name="model_id" ref="model_delivery_picking"/>
        <field name="global" eval="True"/>
        <field name="groups" eval="[(4, ref('odx_delivery_customization.group_delivery_boy'))]"/>
        <field name="domain_force">['|',('pick_up_boy_id.picking_boy_id.id','=', user.partner_id.id),('create_uid', '=', user.id),('company_id', 'in', company_ids)]</field>
    </record>
     <record model="ir.rule" id="delivery_pickings_comp_rule">
        <field name="name">Delivery Picking</field>
        <field name="model_id" ref="model_delivery_picking"/>
         <field name="groups" eval="[(4, ref('odx_delivery_customization.ukka_group_manager'))]"/>
        <field name="domain_force">[]</field>
    </record>
     <record model="ir.rule" id="work_details_comp_rule">
        <field name="name">Work Details multi-company</field>
        <field name="model_id" ref="model_work_details"/>
        <field name="global" eval="True"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
     <record model="ir.rule" id="settlement_details_comp_rule">
        <field name="name">Settlement Details multi-company</field>
        <field name="model_id" ref="model_settlement_details"/>
        <field name="global" eval="True"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
    </record>
    <record model="ir.rule" id="settlement_details_comp_rule">
        <field name="name">Product Categories multi-company</field>
        <field name="model_id" ref="model_product_category"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|', ('company_id', 'in', company_ids), ('company_id', '=', False)]</field>
    </record>



</data>
</odoo>