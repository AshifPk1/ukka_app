<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.module.category" id="ukka_security_groups">
            <field name="name">Ukka Souq</field>
            <field name="sequence">18</field>
        </record>

        <record model="res.groups" id="ukka_group_manager">
            <field name="name">Manager</field>
            <field name="category_id" ref="odx_delivery_customization.ukka_security_groups"/>
        </record>
         <record id="group_delivery_boy" model="res.groups">
            <field name="name">Delivery Boy</field>
            <field name="category_id" ref="odx_delivery_customization.ukka_security_groups"/>
        </record>
         <record id="group_update_delivery" model="res.groups">
            <field name="name">Update Delivery</field>
            <field name="category_id" ref="odx_delivery_customization.ukka_security_groups"/>
        </record>
         <record id="group_delete_records" model="res.groups">
            <field name="name">Delete Records</field>
            <field name="category_id" ref="odx_delivery_customization.ukka_security_groups"/>
        </record>
<!--        <record id="group_sales_access" model="res.groups">-->
<!--            <field name="name">Sales Access</field>-->
<!--            <field name="category_id" ref="base.module_category_sales_sales"/>-->
<!--        </record>-->
          <record id="work_details_access_rule" model="ir.rule">
            <field name="name">Work Details Delivery Boy Access</field>
            <field ref="model_work_details" name="model_id"/>
            <field name="domain_force">[('picking_boy_id.id','=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('odx_delivery_customization.group_delivery_boy'))]"/>
          </record>
         <record id="delivery_details_access_rule" model="ir.rule">
            <field name="name">Ready to PickUp</field>
            <field ref="model_delivery_picking_line" name="model_id"/>
            <field name="domain_force">[('picking_line_id.pick_up_boy_id.picking_boy_id.id','=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('odx_delivery_customization.group_delivery_boy'))]"/>
          </record>
    </data>


</odoo>