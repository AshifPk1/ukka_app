<odoo>
   <record id="res_config_loyalty_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.loyalty.settings.view.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='sale_management']" position="inside">

                    <div id="sales_loyalty">
                       <h2 class="mt32">Sales Loyalty</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="delivery">
                            <div class="o_setting_left_pane" id="activate_loyalty">
                                <field name="activate_loyalty"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="activate_loyalty"/>
                                <div class="text-muted" id="activate_loyalty">
                                    Set loyalty for the sales
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box content-group" attrs="{'invisible': [('activate_loyalty', '=', False)]}">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Loyalty Programs</span>
                                <div class="text-muted">
                                    Set loyalty programs for availing offers
                                </div>
                                <div class="text-muted">
                                    <field name="loyalty_id"/>
                                </div>
                            </div>
                        </div>


                    </div>
                    </div>
                </xpath>
            </field>
   </record>

</odoo>
