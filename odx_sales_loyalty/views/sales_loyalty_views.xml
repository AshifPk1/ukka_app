<odoo>

        <record id="view_sale_loyalty_program_form" model="ir.ui.view">
            <field name="name">loyalty.program.form</field>
            <field name="model">sale.loyalty.program</field>
            <field name="arch" type="xml">
                <form string="Loyalty Program">
                    <sheet>

                        <div class="oe_title">
                                <label class="oe_edit_only" for="name" string="Loyalty Program Name"/>
                                <h1><field name="name"/></h1>
                        </div>

                        <group col="4">
                            <field name="pp_currency" />
                            <field name="pp_product" />
                            <field name="pp_order" />
                            <field name="rounding" />
                        </group>
                          <separator string="Redeem" colspan="4"/>
                        <p>Set minimum points and discount product to redeem the points</p>
                        <group col="4">
                            <field name="redeem_type"/>
                            <field name="minimum_points"/>
                            <field name="disc_product_id"/>
                            <field name="point_amount"/>
<!--                            <field name="min_percent_of_total"/>-->
                        </group>


                        <separator string="Rules" colspan="4"/>
                        <p>Rules change how loyalty points are earned for specific products or categories</p>
                        <field name="rule_ids" colspan="4" nolabel="1">
                            <tree string="Rules">
                                <field name="name" />
                                <field name="pp_product" />
                                <field name="pp_currency" />
                                <field name="cumulative" />
                            </tree>
                        </field>


<!--                        <separator string="Rewards" colspan="4"/>-->
<!--                        <p>Reward the customer with gifts or discounts for loyalty points</p>-->
                        <field name="reward_ids" colspan="4" nolabel="1" invisible="1">
                            <tree string="Rewards">
                                <field name="name"/>
                                <field name="reward_type"/>
                            </tree>
                        </field>

                    </sheet>
                </form>
            </field>
        </record>
    <record id="view_sale_loyalty_rule_form" model="ir.ui.view">
            <field name="name">loyalty.rule.form</field>
            <field name="model">sale.loyalty.rule</field>
            <field name="arch" type="xml">
                <form string="Loyalty Rule">
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" string="Rule Name"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group col="2">
                        <group col='2'>
                            <field name="rule_type" />
                        </group>
                        <group col='2'>
                            <field name="product_id"  attrs="{ 'invisible':[('rule_type','!=','product')],  'required':[('rule_type','==','product')]}" />
                            <field name="category_id" attrs="{ 'invisible':[('rule_type','!=','category')], 'required':[('rule_type','==','category')]}"/>
                        </group>
                    </group>
                    <group col="6">
                        <field name="pp_product" />
                        <field name="pp_currency" />
                        <field name="cumulative" />
                    </group>
                </form>
            </field>
        </record>
       <record id="view_sale_loyalty_reward_form" model="ir.ui.view">
            <field name="name">loyalty.reward.form</field>
            <field name="model">sale.loyalty.reward</field>
            <field name="arch" type="xml">
                <form string="Loyalty Reward">
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" string="Reward Name"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <field name="reward_type" />
                    </group>
                    <group >
<!--                        <field name="gift_product_id"  attrs="{ 'invisible':[('reward_type','!=','gift')], 'required':[('reward_type','==','gift')] }"  />-->
<!--                        <label for="discount" attrs="{ 'invisible':[('reward_type','!=','discount')] }"/>-->
<!--                        <div class="o_row" attrs="{ 'invisible':[('reward_type','!=','discount')] }">-->
<!--                            <field name="discount" />-->
<!--                            <span class="o_form_label">%</span>-->
<!--                        </div>-->
<!--                        <field name="discount_product_id" string="Discount Product" attrs="{ 'invisible':[('reward_type','!=','discount')], 'required':[('reward_type','==','discount')] }" />-->
                        <field name="point_product_id" string="Discount Product" attrs="{ 'invisible':[('reward_type','!=','resale')],   'required':[('reward_type','==','resale')] }" />
                    </group>
                    <group>
                        <field name="point_cost" attrs="{ 'invisible':[('reward_type','=','resale')] }"/>
                        <field name="minimum_points" />
                    </group>
                </form>
            </field>
        </record>

      <record id="view_sale_loyalty_program_tree" model="ir.ui.view">
            <field name="name">loyalty.program.tree</field>
            <field name="model">sale.loyalty.program</field>
            <field name="arch" type="xml">
                <tree string="Loyalty Programs">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="view_sale_loyalty_program_kanban" model="ir.ui.view">
            <field name="name">loyalty.program.kanban</field>
            <field name="model">sale.loyalty.program</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="name"/>
                    <field name="pp_currency"/>
                    <field name="pp_product"/>
                    <field name="pp_order"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="mb4">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="mb4" t-if="record.pp_currency.raw_value">
                                    <span>Points per currency :</span>
                                    <span class="badge badge-pill float-right"><field name="pp_currency"/></span>
                                </div>
                                <div class="mb4" t-if="record.pp_product.raw_value">
                                    <strong>Points per product :</strong>
                                    <span class="badge badge-pill float-right"><field name="pp_product"/></span>
                                </div>
                                <div class="mb4" t-if="record.pp_order.raw_value">
                                    <strong>Points per order :</strong>
                                    <span class="badge badge-pill float-right"><field name="pp_order"/></span>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


    <record id="action_sale_loyalty_program_form" model="ir.actions.act_window">
            <field name="name">Loyalty Programs</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.loyalty.program</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new loyalty program
                </p><p>
                    Loyalty Programs allows you customer to earn points
                    and rewards when doing business at your shops.
                </p>
            </field>
        </record>

        <menuitem
            parent="sale.sale_order_menu"
            action="action_sale_loyalty_program_form"
            id="menu_sale_loyalty_program"
            sequence="30"
             />

</odoo>